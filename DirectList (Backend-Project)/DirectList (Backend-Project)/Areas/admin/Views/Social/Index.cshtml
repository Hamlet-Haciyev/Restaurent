@model List<Social>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <a class="btn btn-primary mb-3" asp-area="Admin" asp-controller="Social" asp-action="Create">Create</a>
        </div>
        <hr />
        <div class="col-lg-12 mt-3">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Icon</th>
                        <th scope="col">Link</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 1;

                        foreach (var social in Model)
                        {
                                        <tr>
                                            <th scope="row">@i</th>
                                            <td>@(social.Name!=null? social.Name : "Sosial sebekenin adi yoxdur")</td>
                                            <td><i class="@social.Icon"></i></td>
                                            <td>@social.Link</td>
                                            <td>
                                                <a class="btn btn-success" asp-area="Admin" asp-controller="Social" asp-action="Update" asp-route-id="@social.Id">Update</a>
                                                <a class="btn btn-danger" asp-area="Admin" asp-controller="Social" asp-action="Delete" asp-route-id="@social.Id" onclick="return confirm('Are you sure?')">Delete</a>
                                            </td>
                                        </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

