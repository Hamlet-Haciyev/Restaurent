@model MenuToRestaurant 
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form asp-area="Admin" asp-controller="Menu" asp-action="Update" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <select class="form-control mb-3 selectTwo" aria-label="Default select example" asp-for="@Model.RestaurantId">
                        @foreach (var item in ViewBag.Restaurants)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <select class="form-control mb-3 selectTwo" aria-label="Default select example" asp-for="@Model.MenuId">
                        @foreach (var item in ViewBag.Menu)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Price" class="form-label">Price</label>
                    <input class="form-control" asp-for="@Model.Price">
                    <span asp-validation-for="@Model.Price" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Description" class="form-label">Description</label>
                    <input class="form-control" asp-for="@Model.Description">
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-area="Admin" asp-controller="Menu" asp-action="Index">Back to list</a>
            </form>
    </div>
    </div>
</div>
