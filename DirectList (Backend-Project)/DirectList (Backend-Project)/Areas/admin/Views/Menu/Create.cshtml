@model MenuToRestaurant
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form asp-area="Admin" asp-controller="Menu" asp-action="Create" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.RestaurantId" class="form-label">Menu</label>

                    <select class="form-control mb-3 selectTwo" aria-label="Default select example" asp-for="@Model.RestaurantId" asp-items="@(new SelectList(ViewBag.Restaurants,"Id","Name"))">
                        <option selected disabled>Select Restaurant</option>
                        @*@foreach (var item in ViewBag.Restaurants)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }*@
                    </select>

                    <select class="form-control mb-3 selectTwo" aria-label="Default select example" asp-for="@Model.MenuId" asp-items="@(new SelectList(ViewBag.Menu,"Id","Name"))">
                        <option selected disabled>Select Menu</option>
                        @*@foreach (var item in ViewBag.Menu)
                        {
                                <option value="@item.Id">@item.Name</option>
                         }*@
                    </select>

                    <label asp-for="@Model.Price" class="form-label">Price</label>
                    <input class="form-control" asp-for="@Model.Price" />

                    <label asp-for="Description" class="form-label">Description</label>
                    <input class="form-control" asp-for="Description" />
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-area="Admin" asp-controller="Menu" asp-action="Index">Back to list</a>
            </form>
        </div>
    </div>
</div>

