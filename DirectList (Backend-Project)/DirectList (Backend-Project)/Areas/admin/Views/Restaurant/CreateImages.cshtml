@model RestaurantImages

@{
    ViewData["Title"] = "CreateImages";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form asp-area="Admin" asp-controller="Restaurant" asp-action="CreateImages" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>

              
                <div class="mb-3">
                    <label asp-for="@Model.ImageFile" class="form-label">Image</label>
                    <input class="form-control" asp-for="@Model.ImageFile" multiple>
                    <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                </div>    
                

                <div class="mb-3">
                    <select class="form-control mb-3 selectTwo" aria-label="Default select example" multiple="multiple" asp-for="@Model.RestaurantId">
                        @foreach (var item in ViewBag.Restaurants)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>




                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-area="Admin" asp-controller="Restaurant" asp-action="Index">Back to list</a>
            </form>
        </div>
    </div>
</div>

