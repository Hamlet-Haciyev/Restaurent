@model About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <a class="btn btn-primary mb-3" asp-area="Admin" asp-controller="About" asp-action="Create">Create</a>
        </div>
        <hr />
        <div class="col-lg-12 mt-3">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Title</th>
                        <th scope="col">Content</th>
                        <th scope="col">Description</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{ 
                        int i = 1;
                                        <tr>
                                            <th scope="row">@i</th>
                                            <td><img src="~/Uploads/@Model.Image" style="width:150px; max-height:150px;" /></td>
                                            <td>@(Model.Title != null ? Model.Title : "About title yoxdur")</td>
                                            <td>@(Model.Content)</td>
                                            <td>@Html.Raw(Model.Description.Length > 150 ? Model.Description.Substring(0,150)+"..." : Model.Description)</td>
                                            <td>
                                                <a class="btn btn-success" asp-area="Admin" asp-controller="About" asp-action="Update" asp-route-id="@Model.Id">Update</a>
                                                <a class="btn btn-danger" asp-area="Admin" asp-controller="About" asp-action="Delete" asp-route-id="@Model.Id" onclick="return confirm('Are you sure?')">Delete</a>
                                            </td>
                                        </tr>
                            i++;
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>


