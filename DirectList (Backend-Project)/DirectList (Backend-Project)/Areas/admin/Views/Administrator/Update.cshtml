@model Administrator 
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form asp-area="Admin" asp-controller="Administrator" asp-action="Update" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.ImageFile" class="form-label">Image</label>
                    <input class="form-control" asp-for="@Model.ImageFile">
                    <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">Name</label>
                    <input class="form-control" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Email" class="form-label">Email</label>
                    <input class="form-control" asp-for="@Model.Email">
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Phone" class="form-label">Phone</label>
                    <input class="form-control" asp-for="@Model.Phone">
                    <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.RestaurantId" class="form-label">Restaurant Name</label>
                    <select class="form-control mb-3 selectTwo" aria-label="Default select example" asp-for="@Model.RestaurantId" asp-items="@(new SelectList(ViewBag.Restaurants,"Id","Name"))">
                        <option selected disabled>Select</option>
                    </select>
                </div>
                <input type="hidden" asp-for="@Model.Image" />
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-area="Admin" asp-controller="Administrator" asp-action="Index">Back to list</a>
            </form>
        </div>
    </div>
</div>

