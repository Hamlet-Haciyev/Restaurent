@model VmBlog
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-wrapper">
    <!--Title Bar -->
    <partial name="_BannerPartial" model="@Model.Banner">
    <!-- Content -->
    <div class="content">
        <div class="container">
            <!-- Blog Posts -->
            <div class="blog-page">
                <div class="row">
                    <!-- Post Content -->
                    <div class="col-lg-9 col-md-8 padding-right-30">
                        <!-- Blog Post -->
                        <div class="blog-post single-post">
                            <!-- Img -->
                            <img class="post-img img-fluid" src="~/Uploads/@Model.Blog.Image" alt="image">
                            <!-- Content -->
                            <div class="post-content">
                                <h3>@Model.Blog.Title</h3>
                                <ul class="post-meta">
                                    <li>@Model.Blog.CreatedDate.ToString("dd MMMM yyyy")</li>
                                    <li><a>@Model.BlogComments.Count Comments</a></li>
                                </ul>
                               @Html.Raw(Model.Blog.Description !=null ? Model.Blog.Description:"Description yoxdur.")
                            </div>
                        </div>
                        <!-- Blog Post / End -->
                        <!-- Post Navigation -->
                        <ul id="posts-nav" class="margin-top-0 margin-bottom-45">
                            <li class="next-post">
                                <button class="btn btn-1 btn-primary" type="button">Next</button>
                            </li>
                            <li class="prev-post">
                                <button class="btn btn-1 btn-primary" type="button"> Previous</button>
                            </li>
                        </ul>
                        <!-- About Author -->
                        <div class="about-author">
                            <img src="~/Uploads/@Model.CustomUser.Image" alt="image" />
                            <div class="about-description">
                                <h4>@Model.CustomUser.FullName</h4>
                                <p>@Model.CustomUser.Text</p>
                            </div>
                        </div>
                        <div class="margin-top-50"></div>
                        <!-- Reviews -->
                        <section class="comments">
                            <h4 class="headline margin-bottom-35">Comments <span class="comments-amount">@Model.BlogComments.Count</span></h4>

                            @foreach (var item in Model.BlogComments)
                            {
                                if (item.ParentCommentId == null)
                                {
                                    <div class="row py-4 list-img-wrap">
                                        <div class="col-md-2 list-img"><img class="img-fluid rounded-circle shadow-lg" src="~/assets/images/avatar3.png" alt="image"></div>
                                        <div class="col-md-10">
                                            <h5 class="text-primary"> @item.Name </h5>
                                            <p>
                                                @if (((DateTime.Now - item.CreatedDate).TotalSeconds / 60 / 60 / 24 / 30 / 12) >= 1)
                                                {
                                                    @((((DateTime.Now - item.CreatedDate).TotalSeconds / 60 / 60 / 24 / 30 / 12).ToString("##") + " year ago").ToString());
                                                }
                                                else
                                                {
                                                    @if (((DateTime.Now - item.CreatedDate).TotalSeconds / 60 / 60 / 24 / 30) >= 1)
                                                    {
                                                        @((((DateTime.Now - item.CreatedDate).TotalSeconds / 60 / 60 / 24 / 30).ToString("##") + " month ago").ToString());
                                                    }
                                                    else
                                                    {
                                                        if (((DateTime.Now - item.CreatedDate).TotalSeconds / 60 / 60 / 24) >= 1)
                                                        {
                                                            @((((DateTime.Now - item.CreatedDate).TotalSeconds / 60 / 60 / 24).ToString("##") + " day ago").ToString());
                                                        }
                                                        else
                                                        {
                                                            if (((DateTime.Now - item.CreatedDate).TotalSeconds / 60 / 60) >= 1)
                                                            {
                                                                @((((DateTime.Now - item.CreatedDate).TotalSeconds / 60/60).ToString("##") + " hour ago").ToString());
                                                            }
                                                            else
                                                            {
                                                                @if (((DateTime.Now - item.CreatedDate).TotalSeconds / 60) >= 1)
                                                                {
                                                                    @((((DateTime.Now - item.CreatedDate).TotalSeconds / 60).ToString("##") + " minutes ago").ToString());
                                                                }
                                                                else
                                                                {
                                                                    @((((DateTime.Now - item.CreatedDate).TotalSeconds).ToString("##") + " seconds ago").ToString());
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            </p>
                                            <p>
                                                @item.Text
                                            </p>
                                            <a class="btn btn-sm btn-primary reply">Reply</a>
                                                @foreach (var item2 in Model.ReplyComments)
                                                {
                                                    if (item2.ParentCommentId == item.Id)
                                                    {
                                                        <div class="row py-4 list-img-wrap">
                                                            <div class="col-md-2 list-img"><img class="img-fluid rounded-circle shadow-lg" src="~/assets/images/avatar3.png" alt="image"></div>
                                                            <div class="col-md-10">
                                                                <h5 class="text-primary"> @item2.Name </h5>
                                                                <p>
                                                                    @if (((DateTime.Now - item2.CreatedDate).TotalSeconds / 60 / 60 / 24 / 30 / 12) >= 1)
                                                                    {
                                                                        @((((DateTime.Now - item2.CreatedDate).TotalSeconds / 60 / 60 / 24 / 30 / 12).ToString("##") + " year ago").ToString());
                                                                    }
                                                                    else
                                                                    {
                                                                        @if (((DateTime.Now - item2.CreatedDate).TotalSeconds / 60 / 60 / 24 / 30) >= 1)
                                                                        {
                                                                            @((((DateTime.Now - item2.CreatedDate).TotalSeconds / 60 / 60 / 24 / 30).ToString("##") + " month ago").ToString());
                                                                        }
                                                                        else
                                                                        {
                                                                            if (((DateTime.Now - item2.CreatedDate).TotalSeconds / 60 / 60 / 24) >= 1)
                                                                            {
                                                                                @((((DateTime.Now - item2.CreatedDate).TotalSeconds / 60 / 60 / 24).ToString("##") + " day ago").ToString());
                                                                            }
                                                                            else
                                                                            {
                                                                                if (((DateTime.Now - item2.CreatedDate).TotalSeconds / 60 / 60) >= 1)
                                                                                {
                                                                                    @((((DateTime.Now - item2.CreatedDate).TotalSeconds / 60/60).ToString("##") + " hour ago").ToString());
                                                                                }
                                                                                else
                                                                                {
                                                                                    @if (((DateTime.Now - item2.CreatedDate).TotalSeconds / 60) >= 1)
                                                                                    {
                                                                                        @((((DateTime.Now - item2.CreatedDate).TotalSeconds / 60).ToString("##") + " minutes ago").ToString());
                                                                                    }
                                                                                    else
                                                                                    {
                                                                                        @((((DateTime.Now - item2.CreatedDate).TotalSeconds).ToString("##") + " seconds ago").ToString());
                                                                                    }
                                                                                }
                                                                            }
                                                                        }
                                                                    }
                                                                </p>
                                                                <p>
                                                                    @item2.Text
                                                                </p>
                                                            </div>
                                                        </div>
                                                    }
                                                }
                                            <form id="add-comment" style="display:flex; padding-left:50px; " class="add-comment" asp-controller="Blog" asp-action="Reply" method="post">
                                                <fieldset @*id="replyComment"*@ class="replyComment mt-3">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <input asp-for="@Model.BlogComment.Name" placeholder="Name" class="form-control form-control-alternative">
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <input asp-for="@Model.BlogComment.Email" type="email" placeholder="Email" class="form-control form-control-alternative">
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="form-group">
                                                                <input asp-for="@Model.BlogComment.Subject" type="text" placeholder="Subject" class="form-control form-control-alternative">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="">
                                                        <div class="form-group">
                                                            <textarea asp-for="@Model.BlogComment.Text" class="form-control form-control-alternative" placeholder="Comment" id="exampleFormControlTextarea1" rows="3"></textarea>
                                                        </div>
                                                    </div>
                                                    <button type="submit" class="mt-3 btn btn-primary">Submit Comment</button>

                                                </fieldset>
                                                <input type="hidden" asp-for="@Model.BlogComment.BlogId" value="@Model.Blog.Id" />
                                                <input type="hidden" asp-for="@Model.BlogComment.ParentCommentId" value="@item.Id" />
                                                <div class="clearfix"></div>
                                            </form>
                                        </div>
                                    </div>
                                }
                                
                            }
                        </section>
                        <div class="clearfix"></div>
                        <!-- Add Comment -->
                        <div id="add-review" class="add-review-box mt-4">
                            <!-- Add Review -->
                            <h3 class="listing-desc-headline mb-4">Add Review</h3>
                            <!-- Review Comment -->
                            <form id="add-comment" class="add-comment" asp-controller="Blog" asp-action="Comment" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <fieldset>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input asp-for="@Model.BlogComment.Name" placeholder="Name" class="form-control form-control-alternative">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input asp-for="@Model.BlogComment.Email" type="email" placeholder="Email" class="form-control form-control-alternative">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <input asp-for="@Model.BlogComment.Subject" type="text" placeholder="Subject" class="form-control form-control-alternative">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="">
                                        <div class="form-group">
                                            <textarea asp-for="@Model.BlogComment.Text" class="form-control form-control-alternative" placeholder="Comment" id="exampleFormControlTextarea1" rows="3"></textarea>
                                        </div>
                                    </div>
                                </fieldset>
                                <input type="hidden" asp-for="@Model.BlogComment.BlogId" value="@Model.Blog.Id" />
                                <button type="submit" class="mt-4 btn btn-primary">Submit Comment</button>
                                <div class="clearfix"></div>
                            </form>
                        </div>
                        <!-- Add Review Box / End -->
                    </div>
                    <!-- Content / End -->
                    <!-- Widgets -->
                    <div class="col-lg-3 col-md-4">
                        <div class="sidebar right">
                            <!-- Widget -->
                            <div class="widget">
                                <h3 class="margin-top-0 margin-bottom-25">Search Blog</h3>
                                <div class="form-group">
                                    <div class="input-group mb-4">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-search"></i></span>
                                        </div>
                                        <input class="form-control" placeholder="Search" type="text">
                                    </div>
                                </div>
                            </div>
                            <!-- Widget / End -->
                            <!-- Widget -->
                            <div class="widget mb-4">
                                <h3>Popular Posts</h3>
                                <ul class="widget-tabs">
                                    <!-- Post #1 -->
                                    <li>
                                        <div class="widget-content">
                                            <div class="widget-thumb">
                                                <a href="pages-blog-post.html"><img src="~/assets/images/bw-1.jpg" alt="image"></a>
                                            </div>
                                            <div class="widget-text">
                                                <h5><a href="pages-blog-post.html">Hotels for All Budgets </a></h5>
                                                <span>October 26, 2016</span>
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>
                                    </li>
                                    <!-- Post #2 -->
                                    <li>
                                        <div class="widget-content">
                                            <div class="widget-thumb">
                                                <a href="pages-blog-post.html"><img src="~/assets/images/bw-2.jpg" alt="image"></a>
                                            </div>
                                            <div class="widget-text">
                                                <h5><a href="pages-blog-post.html">The 50 Greatest Street Arts In London</a></h5>
                                                <span>November 9, 2016</span>
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>
                                    </li>
                                    <!-- Post #3 -->
                                    <li>
                                        <div class="widget-content">
                                            <div class="widget-thumb">
                                                <a href="pages-blog-post.html"><img src="~/assets/images/bw-3.jpg" alt="image"></a>
                                            </div>
                                            <div class="widget-text">
                                                <h5><a href="pages-blog-post.html">The Best Cofee Shops In Sydney Neighborhoods</a></h5>
                                                <span>November 12, 2016</span>
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                            <!-- Widget / End-->
                            <!-- Widget -->
                            <div class="widget margin-top-40">
                                <h3 class="margin-bottom-25">Follow Us</h3>
                                <div class=" btn-wrapper">
                                    <a target="_blank" href="https://twitter.com/" class="btn btn-neutral btn-icon-only btn-twitter btn-round btn-lg" data-toggle="tooltip" data-original-title="Follow us">
                                        <i class="fa fa-twitter"></i>
                                    </a>
                                    <a target="_blank" href="https://www.facebook.com/" class="btn btn-neutral btn-icon-only btn-facebook btn-round btn-lg" data-toggle="tooltip" data-original-title="Like us">
                                        <i class="fa fa-facebook-square"></i>
                                    </a>
                                    <a target="_blank" href="https://dribbble.com/" class="btn btn-neutral btn-icon-only btn-dribbble btn-lg btn-round" data-toggle="tooltip" data-original-title="Follow us">
                                        <i class="fa fa-dribbble"></i>
                                    </a>
                                    <a target="_blank" href="https://github.com/" class="btn btn-neutral btn-icon-only btn-github btn-round btn-lg" data-toggle="tooltip" data-original-title="Star on Github">
                                        <i class="fa fa-github"></i>
                                    </a>
                                </div>
                            </div>
                            <!-- Widget / End-->
                            <div class="clearfix"></div>
                            <div class="margin-bottom-40"></div>
                        </div>
                    </div>
                </div>
                <!-- Sidebar / End -->
            </div>
        </div>
    </div>
</div>


